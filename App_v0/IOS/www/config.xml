    <splash gap:platform="ios" src="res/screen/ios/Default-Landscape@2x.png" width="2048" height="1536"/>
    <splash gap:platform="ios" src="res/screen/ios/Default-568h@2x.png" width="640" height="1136"/>
    <splash gap:platform="ios" src="res/screen/ios/Default-667h@2x.png" width="750" height="1334"/>
